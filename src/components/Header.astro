---
import ConctactIcon from "../icons/ConctactIcon.astro";
import Github from "../icons/Github.astro";
import Play from "../icons/Play.astro";
---

<header
  class="flex flex-row justify-between items-center py-5 w-full xl:w-[1120px] mx-auto flex-wrap"
>
  <img
    src="../../public/projects/TranslaSite-removebg-resise.webp"
    alt=""
    class="w-18 h-14 mx-4"
  />

  <nav
    class="flex flex-row gap-x-10 opacity-80 w-full md:w-auto flex-wrap justify-center items-center"
  >
    <a href="#top">Inicio</a>
    <a href="#experiencia">Experiencia</a>
    <a
      href="Contact"
      class="flex justify-center items-center gap-x-2 md:text-base hover:scale-110 transition"
      href={Astro.props.href}
      target="_black"
      rel="noonpener noreferrer"><ConctactIcon class="size-4 md:size-6"></ConctactIcon>Contacto</a
    >

    <a
      href="https://github.com/"
      class="flex justify-center items-center gap-x-2 md:text-base hover:scale-110 transition"
      href={Astro.props.href}
      target="_black"
      rel="noonpener noreferrer"><Play class="size-4 md:size-6"></Play>Empieza aqu√≠</a
    >

    <a
      href="https://github.com/"
      class="flex justify-center items-center gap-x-2 md:text-base hover:scale-110 transition"
      href={Astro.props.href}
      target="_black"
      rel="noonpener noreferrer"><Github class="size-4 md:size-6"></Github>Github</a
    >
  </nav>
</header>
